<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/row_season_txt_name"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00"
        android:id="@+id/row_season_txt_tedad"
        android:layout_gravity="right"
        android:layout_below="@+id/row_season_txt_name"
        android:layout_alignRight="@+id/row_season_txt_name"
        android:layout_alignEnd="@+id/row_season_txt_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="داستان"
        android:id="@+id/text_txt_story"
        android:layout_alignTop="@+id/row_season_txt_tedad"
        android:layout_toLeftOf="@+id/row_season_txt_tedad"
        android:layout_toStartOf="@+id/row_season_txt_tedad"
        android:layout_marginRight="5dp" />

</RelativeLayout>